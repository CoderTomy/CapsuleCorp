@model IEnumerable<CapsuleCorp.Models.Administrador>

@{
    ViewData["Title"] = "Index";
}

<h1>Administrador</h1>

<div>
    <p><a asp-action="Create" class="btn btn-success">Crear nuevo administrador</a></p>
</div>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.mail)
            </th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.mail)
            </td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-primary mr-3">Editar</a>
                <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-info mr-3">Detalles</a>
                <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>