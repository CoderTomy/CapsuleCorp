@model IEnumerable<CapsuleCorp.Models.Paciente>

@{
    ViewData["Title"] = "Index";
}

<h1>Pacientes</h1> <hr> <br>

<div class="container">
    <main role="main" class="pb-3">
        <div id="container" class="container-index">
            <div id="left" class="left-index">
                <form method="get" asp-action="Index">
                    <p class="p-index">
                        Buscar paciente: <input type="search" class="form-control mr-sm-2 col-lg-3 input-index"
                                                placeholder="Ingrese apellido" value="@ViewData["ObtenerPacientes"]" name="busqueda">
                        <input class="btn btn-primary mt-3" type="submit" value="Buscar" />
                        <a asp-action="Index" class="btn btn-primary mt-3">Ver pacientes</a>
                    </p>
                    </form>
                </div> <br>

                <div>
                    <p><a asp-action="Create" class="btn btn-success">Crear nuevo paciente</a></p>
                </div>

            </div> <br>

            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.DNI)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.nombre)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.apellido)
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.mail)
                        </th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.DNI)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.nombre)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.apellido)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.mail)
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.pacienteID" class="btn btn-primary mr-3">Editar</a>
                                <a asp-action="Details" asp-route-id="@item.pacienteID" class="btn btn-info mr-3">Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.pacienteID" class="btn btn-danger">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </main>
    </div>