@model CapsuleCorp.Models.Turno

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<div class="alert alert-danger" role="alert">
    ¿Está seguro de que desea eliminar este turno?
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.fecha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.fecha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.especialidad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.especialidad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.paciente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.paciente.apellido)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="turnoID" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Volver</a>
    </form>
</div>